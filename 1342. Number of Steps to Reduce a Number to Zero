class Solution {
    int rem ;
    int step ;
    public int numberOfSteps(int num) {
        while ( num != 0 )
        {
     rem = num % 2;  
            if ( rem == 1)
                num = num - 1 ;
            else
                num = num / 2 ;
                
          step = step + 1 ;      
        }
        return(step) ;
    }
    
}
